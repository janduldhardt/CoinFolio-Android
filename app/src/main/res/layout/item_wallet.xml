<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_currency_logo"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:gravity="center"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:id="@+id/textView_currency_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="TextView"
            android:textColor="@color/textColorOnPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_currency_amount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:text="TextView"
            android:textColor="@color/textColorOnPrimary"
            android:textSize="12sp" />

    </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginEnd="8dp"
            android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView_currency_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="bottom"
            android:text="TextView"
            android:textColor="@color/textColorOnPrimary"
            android:textSize="16sp" />

        <TextView
            android:layout_below="@id/textView_currency_price"
            android:id="@+id/textView_currency_price_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:text="TextView"
            android:gravity="top"
            android:textColor="@color/textColorOnPrimary"
            android:textSize="12sp" />
        </RelativeLayout>

</LinearLayout>
